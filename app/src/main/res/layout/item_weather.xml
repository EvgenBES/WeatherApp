            android:textSize="16sp"
            android:textColor="@android:color/white"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_01d"
            android:id="@+id/imageWeather"/>
